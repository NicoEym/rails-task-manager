
<%= form_for(task) do |f| %>
<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :details %>
  <%= f.text_field :details, class: 'form-control' %>
</div>
<div class="form-group">

  <% if with_checkbox %>
    <%= f.label :completed %>
    <%= f.check_box :completed %>
  <% end %>
</div>
  <%= f.submit %>
<% end %>
